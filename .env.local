# Environment configuration for Automerge Sync Server
# Copy this file to .env and update the values

# Required in production
NODE_ENV=production
SHARED_SECRET=tokugroup

# JWT Authentication Configuration
# Generate a secure random secret for production: openssl rand -hex 64
JWT_SECRET=your-super-secret-jwt-signing-key-change-this-in-production-use-openssl-rand-hex-64
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Database Configuration (PostgreSQL)
# If database connection fails, the server will fall back to file-based user storage
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/automerge_sync
DB_HOST=localhost
DB_PORT=5432
DB_NAME=automerge_sync
DB_USER=postgres
DB_PASSWORD=postgres

# User Management (File-based fallback)
DEFAULT_ADMIN_PASSWORD=admin123
USERS_FILE=./data/users.json

# WebSocket Authentication
# Set to 'true' to require authentication for WebSocket connections
REQUIRE_WS_AUTH=false

# Server configuration
PORT=3030
DATA_DIR=./data
SERVER_HOST=localhost

# CORS configuration - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost,https://hp6flcqr-5173.use.devtunnels.ms