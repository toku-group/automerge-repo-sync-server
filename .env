# Environment configuration for Automerge Sync Server
# Copy this file to .env and update the values

# Required in production
NODE_ENV=production
SHARED_SECRET=tokugroup

# Server configuration
PORT=3030
DATA_DIR=./data
SERVER_HOST=sync.dev.tokugroup.com

# CORS configuration - comma-separated list of allowed origins
ALLOWED_ORIGINS=https://dev.tokugroup.com,https://*.dev.tokugroup.com

